
.goods{
  height: calc( ( 100vh - 90rpx ) / 4 );
  display: flex;
  border-bottom: 1rpx solid #ccc;
}
.goods_img{
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goods_img image{
  width: 70%;
} 
.goods_details{
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.goods_details .goods_name{
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_details .goods_price{
  color: red;
  font-size: 32rpx;
}